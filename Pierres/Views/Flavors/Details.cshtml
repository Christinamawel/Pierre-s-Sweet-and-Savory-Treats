@model Pierres.Models.Flavor

<h2>Treats with this Flavor</h2>

<h3>@Html.DisplayFor(model => model.Name)</h3>

@if(Model.JoinEntities.Count == 0)
{
  <p>There are no treats with this flavor!</p>
  <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>
}
else
{
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
    @if(join.Treat.Shared == true)
    {
      <li>@Html.ActionLink($"{@join.Treat.Name}", "Details", "Treats", new { id = @join.Treat.TreatId }) | @join.Treat.Rating‚≠ê</li>
    }
    }
  </ul>
}

<p>@Html.ActionLink("Back to Flavors List", "Index")</p>