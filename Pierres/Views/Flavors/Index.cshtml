@using Pierres.Models;
@model List<Pierres.Models.Flavor>;

<h2>Flavors</h2>

<form action="Flavors/Create" method="post">
  <label for="name">Flavor Name</label>
  <input name="name" type="text" required>
  <button type="submit">Add a new Flavor</button>
</form>

@if(Model.Count == 0)
{
  <p>You have not added any Flavors yet!</p>
}
else
{
  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}