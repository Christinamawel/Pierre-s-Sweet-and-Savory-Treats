@using Pierres.Models;
@model List<Pierres.Models.Flavor>;

<h2>Flavors</h2>

@if(Model.Count == 0)
{
  <p>You have not added any Flavors yet!</p>
}
else
{
  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}